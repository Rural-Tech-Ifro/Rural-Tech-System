                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Barra Superior -->
            <StackPanel Orientation="Horizontal" Background="White" Height="60" Width="auto" Margin="-56,0,0,0">
                <StackPanel.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                </StackPanel.Effect>

                <materialDesign:PackIcon Kind="AccountCircle" Width="40" Height="40" Margin="10" Background="White" Foreground="Green" />
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Serjão dos Foguetes" FontFamily="/Recursos/Fonts/#Poppins Semibold" FontSize="13"/>
                    <WrapPanel>
                        <TextBlock Text="Fazendeiro" FontFamily="/Recursos/Fonts/#Poppins regular" FontSize="13"/>
                        <materialDesign:PackIcon Kind="MenuDown" Width="20" Height="20" Foreground="Green" Background="White"/>
                    </WrapPanel>
                </StackPanel>
                <!-- Adiciona um Spacer -->
                <StackPanel Width="1100" Height="64">
                    <materialDesign:PackIcon Kind="BellOutline" Width="80" Height="30" VerticalAlignment="Center" Margin="0 15 200 0" HorizontalAlignment="Right"/>
                    <Image Source="/Recursos/ImagensGeral/RuralTech(Preto).png" Width="262" Height="108" Margin="0 -65 -30 9" HorizontalAlignment="Right"/>
                </StackPanel>
                
                
            </StackPanel>
            <!-- Campo de Pesquisa -->
            
            <materialDesign:AutoSuggestBox
               materialDesign:HintAssist.Hint="Procure um vermifugo aplicado"
               materialDesign:TextFieldAssist.HasClearButton="True"
               DropDownElevation="Dp0"
               Style="{StaticResource MaterialDesignOutlinedAutoSuggestBox}"
               Suggestions="{Binding AutoSuggestBox2Suggestions}"
               Text="{Binding AutoSuggestBox2Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
               ValueMember="Key" 
               Margin="135,10,535,505" 
               Grid.Row="1" 
               Width="400" 
               Height="50" 
               RenderTransformOrigin="-0.875,-2.1">
                <materialDesign:AutoSuggestBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <Border Width="20" Height="20" Background="{Binding Value}" CornerRadius="10" />
                            <TextBlock Margin="90" Text="{Binding Key}" />
                        </DockPanel>
                    </DataTemplate>
                </materialDesign:AutoSuggestBox.ItemTemplate>
            </materialDesign:AutoSuggestBox>
            
            
            
            
            <!-- Cards de Animais -->
            
            <WrapPanel Grid.Row="1" HorizontalAlignment="Center" Width="800" Margin="0,200,0,20">

                <Grid>
                    <Button Grid.Row="1" Margin="222, 83" Width="50" Height="50" Background="Green" BorderBrush="Transparent" 
HorizontalAlignment="Right" VerticalAlignment="Top" Click="OpenModal">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
            CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="+" FontSize="40" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>

                    <Popup Name="PropertyPopup" Placement="Mouse" StaysOpen="False">
                        <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="10">
                            <StackPanel Width="300" Margin="0 0 0 30">
                                <TextBlock Text="Propriedade" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                                <TextBox
    materialDesign:HintAssist.Hint="Nome:"
    MaxLength="40"
    Style="{StaticResource MaterialDesignFilledTextBox}"
    TextWrapping="Wrap" Name="txt_propriedade"
    Margin="0,0,0,5"/>

                                <TextBox
    materialDesign:HintAssist.Hint="Dias de carencia:"
    MaxLength="40"
    Style="{StaticResource MaterialDesignFilledTextBox}"
    TextWrapping="Wrap" Name="txt_proprietario"
    Margin="0,0,0,5"/>

                                <TextBox
    materialDesign:HintAssist.Hint="Unidades de entrada:"
    MaxLength="40"
    Style="{StaticResource MaterialDesignFilledTextBox}"
    TextWrapping="Wrap" Name="txt_tamanho"
    Margin="0,0,0,5"/>

                                <TextBox
    materialDesign:HintAssist.Hint="Unidades de saida:"
    MaxLength="40"
    Style="{StaticResource MaterialDesignFilledTextBox}"
    TextWrapping="Wrap" Name="txt_telefone"
    Margin="0,0,0,5"/>

                                <TextBox
    materialDesign:HintAssist.Hint="Quantidade:"
    MaxLength="40"
    Style="{StaticResource MaterialDesignFilledTextBox}"
    TextWrapping="Wrap" Name="txt_cep"
    Margin="0,0,0,5"/>

                                <TextBox
    materialDesign:HintAssist.Hint="Descrição:"
    MaxLength="40"
    Style="{StaticResource MaterialDesignFilledTextBox}"
    TextWrapping="Wrap" Name="txt_endereco"
    Margin="0,0,0,5"/>
                                <Button Content="Salvar" Click="SaveProperty" Margin="0,10,0,0"/>
                                <Button Content="Fechar" Click="CloseModal" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </Popup>
                </Grid>
