                        <TextBlock Text="Tamanho: 2 hectares" Foreground="#7C9C81" FontWeight="SemiBold" Margin="10,0,10,0"/>
                        <TextBlock Text="Descrição: Tem mato" Foreground="#7C9C81" FontWeight="SemiBold" Margin="10,0,10,0"/>
                        <TextBlock Text="Tipo de Pastagem: Mato" Foreground="#7C9C81" FontWeight="SemiBold" Margin="10,0,10,0"/>
                        <TextBlock Text="Limite de Animais: 200" Foreground="#7C9C81" FontWeight="SemiBold" Margin="10,0,10,10"/>
                    </StackPanel>
                </Border>
                <Border BorderBrush="#7C9C81" BorderThickness="1" CornerRadius="5" Width="300" Height="213" Margin="0, 0, 125,0">
                    <StackPanel>
                        <Border CornerRadius="5,5,0,0" Height="100">
                            <Border.Background>
                                <ImageBrush Stretch="Fill" ImageSource="/Recursos/ImagensGeral/img_pasto.jpg"/>
                            </Border.Background>
                        </Border>
                        <TextBlock Text="Pasto: 1" FontWeight="Bold" Margin="10,5,10,0"/>
                        <TextBlock Text="Propriedade: Fazenda São José" Foreground="#7C9C81" FontWeight="SemiBold" Margin="10,0,10,0"/>
                        <TextBlock Text="Tamanho: 2 hectares" Foreground="#7C9C81" FontWeight="SemiBold" Margin="10,0,10,0"/>
